<div id="projects">
  <div class="d-flex project-container">
    <div class="project-left">
      <div class="project-image">
      </div>
    </div>
    <div class="project-right d-flex align-items-end">
      <div class="project-list">
        <h1 class="projects-title gradient-title"> Projects</h1>
        <hr class="custom-line">
        <% first_project = data.projects.first %>
        <% data.projects.each do |project|%>
          <a href="<%= project.live_url %>" target="_blank">
            <h3 class="project" id="<%= project.background_color %>"><%= project.name %></h3>
          </a>
          <hr class="custom-line">
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag "show-project" %>
